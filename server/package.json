{
  "name": "template-server",
  "version": "0.0.1",
  "author": {
    "name": "Alex Arus",
    "email": "mr.alex.arus@gmail.com"
  },
  "homepage": "https://gitlab.com/alex.arus/template",
  "repository": "https://gitlab.com/alex.arus/template.git",
  "license": "GPL-3.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "setup": "cp config/example.env .env",
    "development:build": "tsc --build --watch ./config/development.tsconfig.json",
    "development:start": "npx nodemon 'build/development/index.js' --watch 'build/development'",
    "start": "npx concurrently -p '[{time} {name}]' -t 'HH:mm:ss' -c 'yellow.bold,green.bold' 'npm:development:build' 'npm:development:start'",
    "build": "rm -r -f build && tsc --build ./config/production.tsconfig.json",
    "lint": "tslint -c tslint.json -t stylish 'src/**/*.ts'",
    "lint:fix": "tslint -c tslint.json -t stylish 'src/**/*.ts' --fix",
    "test": "jest --watch"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.0.8",
    "template-common": "file:../common/",
    "typeorm": "^0.2.17",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.132",
    "@types/node": "^12.0.4",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  }
}
